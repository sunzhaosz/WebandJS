					email: email,
					subject: subject,
					info: info
				};

				$.ajax({
					type: 'POST',
					url: '/data/submit',
					data: obj,
					success: function(data) {
						console.log(data);
						if(data.status) {
							$("#ModalContent").html('提交成功');
							window.location.reload();
						} else {
							$("#ModalContent").html(data.info);
						}
					},
					error: function() {
						$("#ModalContent").html('提交失败');
					},
					dataType: 'json'
				});
			});
